<div class="container container-signup">
<h1 class="column">Featured movies</h1>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
          <%= link_to movie, class: "poster", id: "poster" do %>
            <%= image_tag movie.poster %>
          <% end %>
          <div class="caption">
              <h3><%= movie.title %></h3>
              <h3><span class="label label-warning"><%= movie.price %></span></h3>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
  