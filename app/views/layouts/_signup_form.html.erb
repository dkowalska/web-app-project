          <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email %>
          </div>
          
          <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password %>
          </div>
          
          <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>
